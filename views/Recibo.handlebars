<div class="container mt-1 pt-2 mb-5">
    <h1 class="mb-4">Historial de compras</h1>
     <div class=" bg-success-subtle rounded-5 p-5 ">
         <div class="bg-succes-subtle rounded-5 p-2">
            <div class="table-responsive">
                <table class="table table striped table-bordered">
                    <thead>
                        <tr>
                            <th>id venta</th>
                            <th>Fecha</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each lista}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.fecha}}</td>
                            <td>{{this.costo}}</td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
 
        </div>
            <div class="text-center mt-4">
                <h3>Total gastado: {{this.suma}} </h3>
        </div>
     </div>
 </div>
 
 
 