<div class="container mt-5 pt-2 mb-5 bg-success-subtle rounded-5 p-5">
  <h1>{{producto.nombre}}</h1>
    <div class="row ">
      <div class="col">
        <img src="{{producto.imagen}}"></img>
      </div>
      <div class="col">
        <p><b>Descripción: </b>{{producto.descripcion}}</p>
        <p><b>Precio: </b>{{producto.precio}}</p>
        <p><b>Stock: </b>{{producto.stock}}</p>
        {{#if producto.stock}}
        <form action="/Agregar/{{producto.id}}" method="POST">
        <button type="submit" class="btn btn-success" >Agregar al carro </button>
        {{else}}
        <div>
        <button type="button" class="btn btn-outline-dark" disabled>Añadir al carrito</button>
        </div>
        {{/if}}
          </form>
      </div>
    </div>
</div>